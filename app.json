{
  "name": "pp-services",
  "description": "app.json criado para permitir os reviews apps",
  "scripts": {
  },
  "env": {
    "ACTIVATED_PROFILE": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "SPRING_DATASOURCE_URL": {
      "required": true
    },
    "SPRING_DATASOURCE_USERNAME": {
      "required": true
    },
    "SPRING_DATASOURCE_PASSWORD": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}
